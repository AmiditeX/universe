{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "servicePort": 0,
          "protocol": "tcp"
        }
      ],
      "forcePullImage": true
    }
  },
  "labels": {
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"blueci.io,www.blueci.io",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "false",
    "HAPROXY_0_ENABLED": "true",    
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_PORT_INDEX": "0",
    "DCOS_SERVICE_SCHEME": "http"
  }
}

